include includes/header         

main(class="text-center my-5 container max-w-[50rem] mx-auto")
  header(class="flex items-center justify-center mt-[7rem] mb-[3rem] text-[64px] font-[kalnia]")
    h1 zeus

  #notification.mb-2 

  div(class="gap-y-[42px] flex flex-col")
    form(hx-post="/login" hx-target="#notification" class="w-full max-w-[20rem] mx-auto gap-y-3 text-left")     
      div 
        label(class="" for="email") email
        input(class="border border-[#ddd] w-full py-2 px-3", placeholder="bee@gmail.com", name="email", type="email", required, id="name")

      div 
        label(class="" for="pasword") password
        input(class="border border-[#ddd] w-full py-2 px-3" name="password" type="password" required id="password")

      button(class="border flex items-center justify-center gap-[8px] bg-[#ffe6b675] hover:bg-[#222] hover:text-white w-full py-2 px-3 mt-10" type="submit" hx-indicator="#indicator") 
        span login
          img(class="htmx-indicator h-5 w-5 inline animation-pulse" src="/public/bolt.svg" id="indicator")

include includes/footer

script(src="https://cdn.tailwindcss.com")
script(src='https://unpkg.com/htmx.org@1.3.1')
script(src='https://unpkg.com/hyperscript.org@0.0.5')
